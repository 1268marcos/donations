import androidx.annotation.NonNull;
import androidx.annotation.Nullable;
import androidx.room.ColumnInfo;
import androidx.room.Entity;
import androidx.room.PrimaryKey;
@Entity(tableName = "donations")

public class Donation {

  public int getId() {
        return mId;
    }

    public void setId(int id) {
        mId = id;
    }

    @PrimaryKey(autoGenerate = true)
    @NonNull
    @ColumnInfo(name = "donationId")
    private int mId;

	private String pCreationDate;
	
	
    @Nullable
    @ColumnInfo(name = "donationName")
    
	private String pName;
	private String pLocation;
	private int pBeneficiaries;
	
	public Donation(String creationDate, String name, String location, int beneficiaries) {
        pCreationDate = creationDate;
        pName = name;
        pLocation = location;
        pBeneficiaries = beneficiaries;
    }
    public String getCreationDate() {
		return pCreationDate;
	}

	public void setCreationDate(String pCreationDate) {
		this.pCreationDate = pCreationDate;
	}

	public String getName() {
		return pName;
	}

	public void setName(String pName) {
		this.pName = pName;
	}

	public String getLocation() {
		return pLocation;
	}

	public void setLocation(String pLocation) {
		this.pLocation = pLocation;
	}

	public int getBeneficiaries() {
		return pBeneficiaries;
	}

	public void setBeneficiaries(int pBeneficiaries) {
		this.pBeneficiaries = pBeneficiaries;
	}
	
}
